<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/selectedClassLayout"
    android:background="@drawable/borderclasses">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="35dp"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/classImageModel"
            android:layout_weight="1" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:id="@+id/frameLayout">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#DC143C"
                android:id="@+id/classProgressBarResourceUsing"
                android:layout_marginTop="17dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="65dp">

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:id="@+id/classResourceNameText"
                    android:layout_marginBottom="7dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>
        </FrameLayout>

        <TextView
            android:text="TextView"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/classNameTextTitle"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="TextView"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dungeonDifficulty"
            android:textStyle="bold"
            android:layout_below="@+id/classPrimStat"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="TextView"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:id="@+id/dungeonLevelRange"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/classRole"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:id="@+id/classRole"
            android:layout_below="@+id/classNameTextTitle"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Primary Stat"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/classPrimStat"
            android:layout_below="@+id/dungeonLevelRange"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</LinearLayout>