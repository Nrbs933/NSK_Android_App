<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="160dp"
    android:id="@+id/outerLinearDungeonLayout"
    >

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/dungeonsLayoutParent"
            android:background="@drawable/category_items_style"
            >


            <TextView
                android:text="DUNGEON NAME"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="39dp"
                android:textColor="@color/txtLoginRegisterColor"
                android:textSize="25sp"
                android:textStyle="bold"
                android:id="@+id/txtDungeonItemName"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp" />

            <TextView
                android:text="LEVEL RANGE"
                android:layout_width="wrap_content"
                android:textColor="@color/txtLoginRegisterColor"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textStyle="italic"
                android:id="@+id/txtDungeonItemLevelRange"
                android:layout_marginEnd="42dp"
                android:layout_below="@+id/txtDungeonItemName"
                android:layout_alignEnd="@+id/txtMoreDetails"
                android:layout_marginTop="10dp" />

            <TextView
                android:text="@string/txtMoreDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txtLoginRegisterColor"
                android:id="@+id/txtMoreDetails"
                android:layout_marginEnd="10dp"

                android:layout_below="@+id/txtDungeonItemLevelRange"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp" />

            <TextView
                android:text="Level range:"
                android:layout_width="wrap_content"
                android:textSize="19sp"
                android:textColor="@color/txtLoginRegisterColor"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txtDungeonItemLevelRange"
                android:layout_toStartOf="@+id/txtDungeonItemLevelRange"
                android:layout_marginEnd="14dp"
                android:id="@+id/textView2" />
        </RelativeLayout>


</LinearLayout>