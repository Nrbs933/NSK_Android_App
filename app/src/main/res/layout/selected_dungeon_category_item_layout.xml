<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/selectedDungeonLayout">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profile_info_styles">

        <TextView
            android:text="Dungeon Name"
            android:textSize="27sp"
            android:textStyle="bold"
            android:textColor="@color/txtLoginRegisterColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dungeonName"
            android:layout_above="@+id/dungeonLevelRange"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="51dp" />

        <TextView
            android:text="Dungeon Level Range"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="@color/txtLoginRegisterColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dungeonLevelRange"
            android:layout_marginBottom="43dp"
            android:layout_above="@+id/dungeonDifficulty"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Dungeon Difficulty"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="@color/txtLoginRegisterColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dungeonDifficulty"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Dungeon Boss Name"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dungeonDifficulty"
            android:layout_centerHorizontal="true"
            android:textColor="@color/txtLoginRegisterColor"
            android:textSize="23sp"
            android:layout_marginTop="45dp"
            android:id="@+id/dungeonBossName" />

        <TextView
            android:text="Difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/textView6"
            android:textStyle="italic"
            android:textColor="@color/txtLoginRegisterColor"
            android:layout_above="@+id/dungeonDifficulty"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Boss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textStyle="italic"
            android:textSize="20sp"
            android:textColor="@color/txtLoginRegisterColor"
            android:id="@+id/textView7"
            android:layout_alignBottom="@+id/dungeonBossName"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="23dp" />

        <TextView
            android:text="Level Range"
            android:layout_width="wrap_content"
            android:textStyle="italic"
            android:textColor="@color/txtLoginRegisterColor"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/textView5"

            android:layout_above="@+id/dungeonLevelRange"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
</LinearLayout>