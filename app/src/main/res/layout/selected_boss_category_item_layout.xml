<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/selectedBossLayout"
    android:background="@drawable/bossesborder">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:background="@drawable/profile_info_styles"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_marginStart="12dp"
            android:id="@+id/bossImageModel"
            android:layout_weight="1" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profile_info_styles">

        <TextView
            android:text="BossType"
            android:textColor="@color/txtLoginRegisterColor"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bossType"
            android:layout_below="@+id/bossNameTextTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp" />

        <TextView
            android:text="22"
            android:textSize="20sp"
            android:textColor="@color/txtLoginRegisterColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/bossLevel"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="DamageType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txtLoginRegisterColor"
            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/bossDamageType"
            android:layout_below="@+id/textView4"

            android:layout_centerHorizontal="true" />

        <TextView
            android:text="BossDungeonName"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:textColor="@color/txtLoginRegisterColor"
            android:id="@+id/bossDungeonName"
            android:textStyle="bold"
            android:layout_below="@+id/textView8"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="BossName"
            android:textColor="@color/txtLoginRegisterColor"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bossNameTextTitle"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="15sp"
            android:textColor="@color/txtLoginRegisterColor"
            android:id="@+id/textView3"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/bossType"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="DamageType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textStyle="italic"
            android:textColor="@color/txtLoginRegisterColor"
            android:textSize="15sp"
            android:layout_below="@+id/bossLevel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp" />

        <TextView
            android:text="Dungeon"
            android:textColor="@color/txtLoginRegisterColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:id="@+id/textView8"
            android:layout_below="@+id/bossDamageType"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>