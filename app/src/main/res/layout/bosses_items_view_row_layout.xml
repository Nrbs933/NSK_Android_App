<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@drawable/bosses_row_style"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:text="BOSSNAME"
            android:layout_width="0dp"
            android:paddingTop="1dp"
            android:textColor="@color/txtLoginRegisterColor"
            android:layout_height="30dp"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/bossNameTxt"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bossParent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="8dp"
        android:layout_height="match_parent"
        android:background="@mipmap/backgroundimgazgalor"
        >

    </LinearLayout>
</LinearLayout>